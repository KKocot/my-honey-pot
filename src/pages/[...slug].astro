---
import Layout from '../layouts/Layout.astro'
import {
  getHivePost,
  getNetVotes,
  parsePostMetadata,
  formatHiveAmount,
  type BridgePost,
} from '../lib/hive'

const { slug } = Astro.params
const author = import.meta.env.HIVE_USERNAME
const permlink = slug ?? ''

let post: BridgePost | null = null
let error: string | null = null

if (!author || !permlink) {
  error = 'Invalid post address.'
} else {
  try {
    post = await getHivePost(author, permlink)
    if (!post || !post.author) {
      error = 'Post not found.'
    }
  } catch (e) {
    console.error('Error fetching Hive post:', e)
    error = 'Error fetching post from Hive blockchain.'
  }
}

// Convert markdown to basic HTML (simplified)
function markdownToHtml(markdown: string): string {
  return markdown
    // Headers
    .replace(/^### (.*$)/gim, '<h3 class="text-lg font-semibold mt-4 mb-2 text-text">$1</h3>')
    .replace(/^## (.*$)/gim, '<h2 class="text-xl font-semibold mt-6 mb-3 text-text">$1</h2>')
    .replace(/^# (.*$)/gim, '<h1 class="text-2xl font-bold mt-8 mb-4 text-text">$1</h1>')
    // Bold and italic
    .replace(/\*\*\*(.*?)\*\*\*/gim, '<strong><em>$1</em></strong>')
    .replace(/\*\*(.*?)\*\*/gim, '<strong class="font-semibold">$1</strong>')
    .replace(/\*(.*?)\*/gim, '<em>$1</em>')
    // Links
    .replace(/\[([^\]]+)\]\(([^\)]+)\)/gim, '<a href="$2" class="text-primary hover:text-primary-hover underline" target="_blank" rel="noopener">$1</a>')
    // Images
    .replace(/!\[([^\]]*)\]\(([^\)]+)\)/gim, '<img src="$2" alt="$1" class="max-w-full rounded-lg my-4" />')
    // Line breaks
    .replace(/\n\n/gim, '</p><p class="mb-4 text-text leading-relaxed">')
    .replace(/\n/gim, '<br />')
}

const metadata = post ? parsePostMetadata(post.json_metadata) : {}
const tags = metadata.tags ?? []
---

<Layout title={`${post?.title ?? 'Post'} | Hive Blog`}>
  <div class="max-w-3xl mx-auto px-4 py-8">
    <a
      href="/"
      class="inline-flex items-center text-primary hover:text-primary-hover mb-6 transition-colors"
    >
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
      </svg>
      Back to homepage
    </a>

    {error && (
      <div class="bg-error/10 border border-error/30 text-error px-4 py-3 rounded-lg mb-6">
        <strong>Error:</strong> {error}
      </div>
    )}

    {post && (
      <article class="bg-bg-card p-8 rounded-xl shadow-sm border border-border">
        <h1 class="text-3xl font-bold text-text mb-4">{post.title}</h1>

        <div class="flex items-center gap-3 mb-6 pb-4 border-b border-border">
          <img
            src={`https://images.hive.blog/u/${post.author}/avatar`}
            alt={post.author}
            class="w-10 h-10 rounded-full border border-border"
            onerror="this.src='/hive-logo.png'"
          />
          <div>
            <a
              href={`https://hive.blog/@${post.author}`}
              target="_blank"
              rel="noopener"
              class="font-medium text-text hover:text-primary transition-colors"
            >
              @{post.author}
            </a>
            <p class="text-text-muted text-sm">
              {new Date(post.created + 'Z').toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'long',
                day: 'numeric',
              })}
            </p>
          </div>
        </div>

        <div
          class="prose max-w-none mb-6"
          set:html={`<p class="mb-4 text-text leading-relaxed">${markdownToHtml(post.body)}</p>`}
        />

        <div class="flex flex-wrap items-center gap-x-6 gap-y-2 pt-4 border-t border-border text-text-muted">
          <span class="flex items-center gap-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
            </svg>
            {getNetVotes(post)} votes
          </span>
          <span class="flex items-center gap-1">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
            </svg>
            {post.children} comments
          </span>
          <span class="text-success font-medium">
            ${formatHiveAmount(post.pending_payout_value)} payout
          </span>
        </div>

        {tags.length > 0 && (
          <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-border">
            {tags.map((tag: string) => (
              <span class="px-3 py-1 text-sm bg-bg-secondary text-text-muted rounded-full">
                #{tag}
              </span>
            ))}
          </div>
        )}

        <div class="mt-6 pt-4 border-t border-border">
          <a
            href={`https://hive.blog${post.url}`}
            target="_blank"
            rel="noopener"
            class="inline-flex items-center px-4 py-2 bg-primary text-bg-card rounded-lg hover:bg-primary-hover transition-colors font-medium"
          >
            View on Hive.blog
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>
      </article>
    )}
  </div>
</Layout>
