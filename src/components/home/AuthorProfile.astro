---
import type {
  IProfile,
  IDatabaseAccount,
  IGlobalProperties,
  IAccountManabars,
} from '../../lib/blog-logic'
import { calculateEffectiveHP, parseFormattedAsset } from '../../lib/blog-logic'
import type { CardLayout, CardSection, CardSectionChild, SocialLink } from './types'

// Platform colors for social links
const platformColors: Record<string, string> = {
  instagram: '#E4405F',
  x: '#000000',
  youtube: '#FF0000',
  tiktok: '#000000',
  threads: '#000000',
  facebook: '#1877F2',
}

// Default layout if none provided
const defaultAuthorProfileLayout: CardLayout = {
  sections: [
    { id: 'sec-1', orientation: 'horizontal', children: [{ type: 'element', id: 'coverImage' }] },
    { id: 'sec-2', orientation: 'horizontal', children: [{ type: 'element', id: 'avatar' }, { type: 'element', id: 'username' }, { type: 'element', id: 'reputation' }] },
    { id: 'sec-3', orientation: 'vertical', children: [{ type: 'element', id: 'displayName' }, { type: 'element', id: 'about' }] },
    { id: 'sec-4', orientation: 'horizontal', children: [{ type: 'element', id: 'location' }, { type: 'element', id: 'website' }, { type: 'element', id: 'joinDate' }] },
    { id: 'sec-5', orientation: 'horizontal', children: [{ type: 'element', id: 'followers' }, { type: 'element', id: 'following' }, { type: 'element', id: 'postCount' }] },
  ],
}

interface Props {
  username: string
  account: IDatabaseAccount | null
  profile: IProfile | null
  globalProperties: IGlobalProperties | null
  accountManabars: IAccountManabars | null
  // Layout from settings
  profileLayout?: CardLayout
  // Size settings
  avatarSize?: number
  coverHeight?: number
  usernameSize?: number
  displayNameSize?: number
  aboutSize?: number
  statsSize?: number
  metaSize?: number
  // Social Links
  socialLinks?: SocialLink[]
}

const {
  username,
  account,
  profile,
  globalProperties,
  accountManabars,
  profileLayout = defaultAuthorProfileLayout,
  avatarSize = 64,
  coverHeight = 64,
  usernameSize = 14,
  displayNameSize = 18,
  aboutSize = 14,
  statsSize = 14,
  metaSize = 12,
  socialLinks = []
} = Astro.props

// Profile metadata from IProfile (with fallbacks matching FullPreview behavior)
const profileMeta = profile?.metadata
const displayName = profileMeta?.name || profile?.name
const about = profileMeta?.about || ''
const location = profileMeta?.location || ''
const website = profileMeta?.website || ''
const coverImage = profileMeta?.coverImage || ''
const profileImage = profileMeta?.profileImage

// Stats from IProfile
const reputation = profile?.reputation
const followers = profile?.stats?.followers
const following = profile?.stats?.following
const joinDate = profile?.created ? new Date(profile.created) : null

// Financial data from IDatabaseAccount
const postCount = account?.postCount ?? 0

// Parse balance amounts
const hiveBalance = account ? parseFormattedAsset(account.balance) : 0
const hbdBalance = account ? parseFormattedAsset(account.hbdBalance) : 0

// Calculate HP values using global properties
let hivePower = 0
if (globalProperties && account) {
  hivePower = calculateEffectiveHP(
    account.vestingShares,
    account.delegatedVestingShares,
    account.receivedVestingShares,
    globalProperties
  )
}

// Use Blog Logic manabar data
const votingPower = accountManabars?.upvote?.percent ?? 0

// Format large numbers
function formatNumber(num: number): string {
  if (num >= 1000000) return (num / 1000000).toFixed(1) + 'M'
  if (num >= 1000) return (num / 1000).toFixed(1) + 'K'
  return num.toString()
}

// Format date
function formatDate(date: Date): string {
  return date.toLocaleDateString('en-US', {
    month: 'short',
    year: 'numeric'
  })
}

// Avatar URL
const avatarUrl = profileImage || `https://images.hive.blog/u/${username}/avatar`

// Render element by ID - returns HTML string
function renderElement(id: string): string | null {
  switch (id) {
    case 'coverImage':
      if (!coverImage) {
        return `<div class="bg-gradient-to-r from-primary/30 to-accent/30 rounded-t-lg -mx-4 -mt-4 mb-2" style="height: ${coverHeight}px;"></div>`
      }
      return `<div class="bg-cover bg-center rounded-t-lg -mx-4 -mt-4 mb-2" style="height: ${coverHeight}px; background-image: url('https://images.hive.blog/640x0/${coverImage}');"></div>`

    case 'avatar':
      return `<img src="${avatarUrl}" alt="${username}" style="width: ${avatarSize}px; height: ${avatarSize}px;" class="rounded-full border-2 border-bg-card ring-2 ring-border flex-shrink-0" onerror="this.src='/hive-logo.png'" />`

    case 'username':
      return `<p class="font-bold text-text" style="font-size: ${usernameSize}px;">@${username}</p>`

    case 'displayName':
      // Always render displayName (matches FullPreview behavior)
      return `<h2 class="font-bold text-text" style="font-size: ${displayNameSize}px;">${displayName || username}</h2>`

    case 'reputation':
      // Always render reputation (matches FullPreview behavior)
      return `<span class="inline-block px-2 py-0.5 text-xs font-medium bg-primary/10 text-primary rounded-full">Rep: ${reputation !== undefined ? Math.floor(reputation) : '?'}</span>`

    case 'about':
      if (!about) return null
      return `<p class="text-text-muted line-clamp-2" style="font-size: ${aboutSize}px;">${about}</p>`

    case 'location':
      if (!location) return null
      return `<span class="flex items-center gap-1 text-text-muted" style="font-size: ${metaSize}px;"><svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>${location}</span>`

    case 'website':
      if (!website) return null
      const href = website.startsWith('http') ? website : `https://${website}`
      const displayUrl = website.replace(/^https?:\/\//, '').replace(/\/$/, '')
      return `<a href="${href}" target="_blank" rel="noopener noreferrer" class="flex items-center gap-1 text-primary hover:underline" style="font-size: ${metaSize}px;"><svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"></path></svg>${displayUrl}</a>`

    case 'joinDate':
      // Always render joinDate (matches FullPreview behavior)
      return `<span class="flex items-center gap-1 text-text-muted" style="font-size: ${metaSize}px;"><svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>${joinDate ? formatDate(joinDate) : 'Unknown'}</span>`

    case 'followers':
      // Always render (matches FullPreview behavior)
      return `<div class="text-center"><p class="font-bold text-text" style="font-size: ${statsSize}px;">${formatNumber(followers ?? 0)}</p><p class="text-xs text-text-muted">Followers</p></div>`

    case 'following':
      // Always render (matches FullPreview behavior)
      return `<div class="text-center"><p class="font-bold text-text" style="font-size: ${statsSize}px;">${formatNumber(following ?? 0)}</p><p class="text-xs text-text-muted">Following</p></div>`

    case 'postCount':
      // Always render (matches FullPreview behavior)
      return `<div class="text-center"><p class="font-bold text-text" style="font-size: ${statsSize}px;">${formatNumber(postCount)}</p><p class="text-xs text-text-muted">Posts</p></div>`

    case 'hivePower':
      return `<div class="text-center"><p class="font-bold text-text" style="font-size: ${statsSize}px;">${hivePower.toFixed(3)}</p><p class="text-xs text-text-muted">Hive Power</p></div>`

    case 'hpEarned':
      return `<div class="text-center"><p class="font-bold text-success" style="font-size: ${statsSize}px;">${hivePower.toFixed(3)}</p><p class="text-xs text-text-muted">HP</p></div>`

    case 'votingPower':
      return `<div class="text-center"><p class="font-semibold text-text" style="font-size: ${statsSize}px;">${votingPower.toFixed(1)}%</p><p class="text-xs text-text-muted">Voting Power</p></div>`

    case 'hiveBalance':
      return `<div class="text-center"><p class="font-semibold text-text" style="font-size: ${statsSize}px;">${hiveBalance.toFixed(3)}</p><p class="text-xs text-text-muted">HIVE</p></div>`

    case 'hbdBalance':
      return `<div class="text-center"><p class="font-semibold text-text" style="font-size: ${statsSize}px;">${hbdBalance.toFixed(3)}</p><p class="text-xs text-text-muted">HBD</p></div>`

    default:
      return null
  }
}

// Render a child (element or nested section)
function renderChild(child: CardSectionChild): string {
  if (child.type === 'element') {
    return renderElement(child.id) || ''
  } else {
    return renderSection(child.section)
  }
}

// Render a section with its orientation (recursive)
function renderSection(section: CardSection): string {
  if (!section.children || section.children.length === 0) return ''

  const childrenHtml = section.children
    .map(child => renderChild(child))
    .filter(html => html.length > 0)
    .join('')

  if (!childrenHtml) return ''

  const flexClass = section.orientation === 'horizontal'
    ? 'flex flex-wrap items-center gap-2'
    : 'flex flex-col gap-1'

  return `<div class="${flexClass}">${childrenHtml}</div>`
}

// Render all sections
function renderAllSections(): string {
  return profileLayout.sections.map(section => renderSection(section)).join('')
}

// Render social links
function renderSocialLinks(): string {
  const validLinks = socialLinks.filter(l => l.url)
  if (validLinks.length === 0) return ''

  const linksHtml = validLinks.map(link => {
    const color = platformColors[link.platform] || '#000000'
    let iconSvg = ''

    switch (link.platform) {
