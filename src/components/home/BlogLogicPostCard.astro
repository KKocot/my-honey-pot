---
import type { Post } from '../../lib/blog-logic'

interface Props {
  post: Post
  cardLayout: 'horizontal' | 'vertical'
  thumbnailPosition: 'left' | 'right'
  thumbnailSizePx: number
  cardPaddingPx: number
  cardBorderRadiusPx: number
  titleSizePx: number
  showThumbnail: boolean
  showSummary: boolean
  summaryMaxLength: number
  showDate: boolean
  showVotes: boolean
  showComments: boolean
  showPayout: boolean
  showTags: boolean
  cardBorder: boolean
  maxTags: number
  masonryStyle?: string
}

const {
  post,
  cardLayout,
  thumbnailPosition,
  thumbnailSizePx,
  cardPaddingPx,
  cardBorderRadiusPx,
  titleSizePx,
  showThumbnail,
  showSummary,
  summaryMaxLength,
  showDate,
  showVotes,
  showComments,
  showPayout,
  showTags,
  cardBorder,
  maxTags,
  masonryStyle = ''
} = Astro.props

// Get async data from Blog Logic Post
const content = await post.getContent()
const commentsCount = await post.getCommentsCount()
// Use cached votesCount property instead of getVotesCount() to avoid extra API call
const votesCount = post.votesCount

// Helper functions
function getSummary(): string {
  // Use summary from json_metadata if available
  if (post.summary && post.summary.trim().length > 0) {
    const desc = post.summary.trim().slice(0, summaryMaxLength)
    return desc.length < post.summary.trim().length ? desc + '...' : desc
  }

  // Fall back to extracting from body content
  const plainText = content
    .replace(/!\[[^\]]*\]\([^)]+\)/g, '')
    .replace(/\[[^\]]*\]\([^)]+\)/g, '')
    .replace(/#{1,6}\s*/g, '')
    .replace(/[*_`~]/g, '')
    .replace(/<[^>]+>/g, '')
    .replace(/\n+/g, ' ')
    .replace(/\s+/g, ' ')
    .trim()

  if (plainText.length === 0) return 'No description...'

  return plainText.length > summaryMaxLength
    ? plainText.slice(0, summaryMaxLength) + '...'
    : plainText
}

function getThumbnailUrl(imageUrl: string | undefined): string | null {
  if (!imageUrl || imageUrl.length === 0) return null
  if (imageUrl.startsWith('http://') || imageUrl.startsWith('https://')) {
    return `https://images.hive.blog/256x512/${imageUrl}`
  }
  return null
}

function getFirstValidImage(): string | null {
  // First try getTitleImage() from Blog Logic
  const titleImage = post.getTitleImage()
  if (titleImage) {
    const url = getThumbnailUrl(titleImage)
    if (url) return url
  }

  // Fall back to images array
  for (const img of post.images) {
    const url = getThumbnailUrl(img)
    if (url) return url
  }
  return null
}

function formatPayout(payoutValue: string): string {
  // Parse "1.234 HBD" format
  const match = payoutValue.match(/^([\d.]+)/)
  if (match) {
    return parseFloat(match[1]).toFixed(2)
  }
  return '0.00'
}

const thumbnail = getFirstValidImage()
const summary = getSummary()

const borderStyle = cardBorder ? 'border: 1px solid var(--color-border);' : ''
const cardStyle = `padding: ${cardPaddingPx}px; border-radius: ${cardBorderRadiusPx}px; ${borderStyle} ${masonryStyle}`

const flexDirection = cardLayout === 'vertical'
  ? 'flex-col'
  : thumbnailPosition === 'right' ? 'flex-row-reverse' : 'flex-row'

const showMeta = showDate || showVotes || showComments || showPayout
---

<article
  class="bg-bg-card shadow-sm hover:shadow-md transition-shadow"
  style={cardStyle}
>
  <div class={`flex ${flexDirection} gap-4`}>
    {showThumbnail && thumbnail && (
      <img
        src={thumbnail}
        alt=""
        style={`width: ${thumbnailSizePx}px; height: ${thumbnailSizePx}px; object-fit: cover; border-radius: 8px; flex-shrink: 0;`}
        onerror="this.style.display='none'"
      />
    )}
    <div class="flex-1 min-w-0">
      <h2 class="font-semibold mb-2" style={`font-size: ${titleSizePx}px;`}>
        <a
          href={`/${post.permlink}`}
          class="text-text hover:text-primary transition-colors"
        >
          {post.title}
        </a>
      </h2>

      {showSummary && (
        <p class="text-text-muted text-sm mb-3 line-clamp-3">{summary}</p>
      )}

      {showMeta && (
        <div class="flex flex-wrap items-center gap-x-4 gap-y-1 text-sm text-text-muted mb-3">
          {showDate && (
            <span>{post.publishedAt.toLocaleDateString('pl-PL')}</span>
          )}
          {showVotes && (
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" />
              </svg>
              {votesCount}
            </span>
          )}
          {showComments && (
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
              {commentsCount}
            </span>
          )}
          {showPayout && (
            <span class="text-success font-medium">
              ${formatPayout(post.pendingPayoutValue)}
            </span>
          )}
        </div>
      )}

      {showTags && post.tags.length > 0 && (
        <div class="flex flex-wrap gap-2">
          {post.tags.slice(0, maxTags).map((tag: string) => (
            <span class="px-2 py-0.5 text-xs bg-bg-secondary text-text-muted rounded">
              #{tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </div>
</article>
