# MongoDB connection string
# Dla lokalnej bazy danych:
MONGODB_URI=mongodb://localhost:27017/astro-payload

# Dla MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/astro-payload

# Payload CMS secret key (zmień na własny losowy ciąg znaków)
PAYLOAD_SECRET=your-super-secret-key-change-me

# Adres URL serwera Payload
PAYLOAD_URL=http://localhost:3000

# Session secret for Hive authentication (min 32 characters)
# Generate with: openssl rand -base64 32
SESSION_SECRET=your-session-secret-at-least-32-chars
